{
	"name": "PL_REST_TO_RAW_PAGED",
	"properties": {
		"activities": [
			{
				"name": "Copy_REST_To_RAW",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "RestSource",
						"httpRequestTimeout": "00:01:40",
						"requestInterval": "00.00:00:00.010",
						"requestMethod": "GET"
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['pagination']['page']"
								},
								"sink": {
									"name": "page"
								}
							},
							{
								"source": {
									"path": "$['pagination']['page_size']"
								},
								"sink": {
									"name": "page_size"
								}
							},
							{
								"source": {
									"path": "$['pagination']['total_pages']"
								},
								"sink": {
									"name": "total_pages"
								}
							},
							{
								"source": {
									"path": "$['pagination']['total_records']"
								},
								"sink": {
									"name": "total_records"
								}
							},
							{
								"source": {
									"path": "['customer_id']"
								},
								"sink": {
									"name": "customer_id"
								}
							},
							{
								"source": {
									"path": "['first_name']"
								},
								"sink": {
									"name": "first_name"
								}
							},
							{
								"source": {
									"path": "['last_name']"
								},
								"sink": {
									"name": "last_name"
								}
							},
							{
								"source": {
									"path": "['email']"
								},
								"sink": {
									"name": "email"
								}
							},
							{
								"source": {
									"path": "['phone']"
								},
								"sink": {
									"name": "phone"
								}
							},
							{
								"source": {
									"path": "['city']"
								},
								"sink": {
									"name": "city"
								}
							},
							{
								"source": {
									"path": "['state']"
								},
								"sink": {
									"name": "state"
								}
							},
							{
								"source": {
									"path": "['created_at']"
								},
								"sink": {
									"name": "created_at"
								}
							}
						],
						"collectionReference": "$.data"
					}
				},
				"inputs": [
					{
						"referenceName": "ds_RestResource",
						"type": "DatasetReference",
						"parameters": {
							"relativeUrl": {
								"value": "@concat(\n  pipeline().parameters.endpoint,\n  '?page=',\n  pipeline().parameters.page,\n  '&page_size=',\n  pipeline().parameters.page_size\n)",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ls_Parquet",
						"type": "DatasetReference",
						"parameters": {
							"folderpath": "@concat(   'raw/',   pipeline().parameters.table_name,   '/ingest_date=',   formatDateTime(utcNow(),'yyyy-MM-dd') )"
						}
					}
				]
			}
		],
		"parameters": {
			"page": {
				"type": "string",
				"defaultValue": "1"
			},
			"page_size": {
				"type": "string",
				"defaultValue": "1"
			},
			"table_name": {
				"type": "string",
				"defaultValue": "customers"
			},
			"endpoint": {
				"type": "string",
				"defaultValue": "/customers"
			}
		},
		"annotations": []
	}
}